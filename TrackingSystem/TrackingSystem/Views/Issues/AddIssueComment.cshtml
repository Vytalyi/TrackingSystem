@model TrackingSystem.Models.Comment
@{
	ViewBag.Title = "CommentAdd";
	Layout = "~/Views/Shared/_Layout.cshtml";
	<script type="text/javascript">
		SetCurrentTab('issues');
	</script>
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.Partial("_PageTitle", "Add comment:")
@using (Html.BeginForm())
{
	@Html.ValidationSummary(true)
	<fieldset>
		<legend>@Html.LabelFor(model => model.Message)</legend>
		@Html.HiddenFor(model => model.Issue_Id)
		<div class="editor-field">
			@Html.TextAreaFor(model => model.Message, new { cols = "70", rows = "10" })
			@Html.ValidationMessageFor(model => model.Message)
		</div>
	</fieldset>
	<div>
		<input type="submit" value="Save" class="btn" />
		@Html.ActionLink("Back to Details", "Details", new { id = Model.Issue_Id }, new { @class = "btn" })
		@Html.ActionLink("Back to List", "List", null, new { @class = "btn" })
	</div>
}